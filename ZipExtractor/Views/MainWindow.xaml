<v:AnimatedWindow x:Class="ZipExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v="clr-namespace:ZipExtractor.Views"
        mc:Ignorable="d" AllowsTransparency="True" Background="{x:Null}"
        Window.SizeToContent="Height" Width="350" WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Topmost="True"
        Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Border CornerRadius="5">
            <Border.Background>
                <ImageBrush ImageSource="/Resources/mbg.jpg" Stretch="UniformToFill" Opacity="0.9"/>
            </Border.Background>
        </Border>
        <StackPanel Margin="13">
            <TextBlock x:Name="textStatus" Margin="0,0,0,10" HorizontalAlignment="Left" TextWrapping="Wrap"/>
            <ProgressBar x:Name="pbProgress"/>
        </StackPanel>
    </Grid>
</v:AnimatedWindow>
